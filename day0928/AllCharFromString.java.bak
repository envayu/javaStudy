//차례대로 문자를 가지고오고싶다

class AllCharFromString 
{
	public static void main(String[] args) 
	{
		String data;
		data = "java";
		//위에 두줄 한줄로 가능 string data = "hello";

		char ch;
		int cnt = 0;


		//반복문으로 가능
		for(int i=0 ; i < data.length() ; i=i+1){
			ch = data.charAt(i);
			//System.out.println(ch);
			if (ch == 'a');//ch가 a랑 같은가요?
				cnt = cnt + 1;//그렇다면 cnt에 1 더하세요
		}
		System.out.println("소문자 a의 개수는" + cnt + "개 입니다");

